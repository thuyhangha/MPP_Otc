<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="com.library.controller.NewBookViewController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label id="register-label" text="Add Book" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="ISBN" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtISBN" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Title" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="txtTitle" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Borrow Duration" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="txtBorrowDuration" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <HBox alignment="BASELINE_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#goActionCancel" text="Cancel" />
        <Button onAction="#goActionAddNewBook" text="Add" />
    </HBox>
    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
