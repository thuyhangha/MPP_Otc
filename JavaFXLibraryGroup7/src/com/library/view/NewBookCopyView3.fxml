<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.NewBookCopyViewController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label id="register-label" text="Add Book Copy" GridPane.columnIndex="0" GridPane.columnSpan="2" />

    <Label text="Copy Number" GridPane.rowIndex="2" />

    <TextField fx:id="txtISBN" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <HBox alignment="BASELINE_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button fx:id="btnAdd" onAction="#goAddBookCopy" text="Add" />
        <Button fx:id="btnCancel" onAction="#goCancelBookCopy" text="Cancel" />
    </HBox>
   <Label text="ISBN" GridPane.rowIndex="1" />
   <TextField fx:id="txtCopyNumber" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
